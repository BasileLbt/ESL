<h2>Edit <%= current_user.email %></h2>

<%= form_for(@user) do |f| %>
  

  <div class="field">
    <%= f.label :pseudo %><br />
    <%= f.text_field :pseudo, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :sexe %><br />
    <%= f.text_field :sexe, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :pays %><br />
    <%= f.text_field :pays, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :ville %><br />
    <%= f.text_field :ville, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :adresse %><br />
    <%= f.text_field :adresse, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, autofocus: true %>
  </div>

   <div class="field">
      <%= f.check_box :admin %>
      <%= f.label :admin %>
    </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
