<header>
      <div id='en tête'>
        <div id='logo'>
          <img src='http://www.club-3d.com/tl_files/club3d/uploads/news/image003.png' width='100' height='100' alt='Logo gaming' />
          <h1>Kantik Gaming</h1>
        </div>
        <h4>Site de tournoi en ligne</h4>
      </div>
      <br/>

    <ul id="menu">
        <li><%= link_to'Home',root_path %></li>
        <% if user_signed_in? %>
            <li>
                  <%= link_to'Mon Profil' %>
                  <ul>
                        <li><%= link_to'Edition', edit_user_path(current_user) %></li>
                        <li><%= link_to'Mes Jeux', jeux_users_path(current_user) %></li>
                        <li><%= link_to'Mes Tournois', tournois_users_path(current_user) %></li>
                        <li><%= link_to'Statistiques', statistiques_users_path(current_user) %></li>
                        <li><%= link_to'Aperçu', user_path(current_user) %></li>
                  </ul>
          </li>
        <% end %>
        <li><%= link_to'Tournois', tournois_path %></li>
        <li><%= link_to'Jeux Disponibles', jeux_videos_path %></li>
        <li><%= link_to'Admin', new_admin_user_session_path %></li>    
        <li><%= link_to "/activities" do %>
        Notifications
        <%- @activities = PublicActivity::Activity.order("created_at desc").where(owner_id: current_user.id, owner_type: "User") %>
        <%- @notification_count = @activities.where(:read => false).count  %>

        <span class="badge badge-info"><%= @notification_count %></span>
        <% end %></li>
 
     
    </ul>
</header>
  