    <p>
    <%= f.label :heure_inscription %><br />
    <%= f.time_select :heure_inscription, { prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 15 }, { class: 'form-control' } %>
  </p>
  <p>
    <%= f.label :regles %><br />
    <%= f.text_area :regles, class:"form-control", rows:"3" %>
  </p>
  <p>
    <%= f.label :recompenses %><br />
    <%= f.text_area :recompenses, class:"form-control", rows:"3" %>
  </p>
