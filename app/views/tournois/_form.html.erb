      <% end %>
      </ul>
    </div>
  <% end %>


  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, class:"form-control" %>
  </p>
  <p>
    <%= f.label :pays %><br />
    <%= f.text_field :pays, class:"form-control" %>
  </p>
  <p>
    <%= f.label :lieu %><br />
    <%= f.text_field :lieu, class:"form-control" %>
  </p>
